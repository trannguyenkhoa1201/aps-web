@model Book
<div class="container">
    <h3>Chỉnh sửa sách</h3>
    <form method="post" asp-action="Edit">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title">Tiêu đề sách</label>
            <input asp-for="Title" type="text" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PublicationYear">Năm xuất bản</label>
            <input asp-for="PublicationYear" type="number" class="form-control" />
            <span asp-validation-for="PublicationYear" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AuthorId">Tác giả</label>
            <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.Authors"></select>
            <span asp-validation-for="AuthorId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
