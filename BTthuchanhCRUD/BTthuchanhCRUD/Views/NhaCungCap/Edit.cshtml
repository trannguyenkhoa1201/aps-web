﻿
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

@model NhaCungCap
<div class="container">
    <h2>Chỉnh sửa </h2>
    <form method="post" asp-action="Edit">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <lable asp-for="Ten">Tên </lable>
            <input asp-for="Ten" type="text" class="form-control" />
            <span asp-validation-for="Ten" class="text-danger"></span>
        </div>

        <div class="form-group">
            <lable asp-for="DiaChi">Địa chỉ</lable>
            <input asp-for="DiaChi" type="Diachi" class="form-control">
            <span asp-validation-for="DiaChi" class="text-danger"></span>
        </div>

        <div class="form-group">
            <lable asp-for="SDT">SDT</lable>
            <input asp-for="SDT" type="SDT" class="form-control">
            <span asp-validation-for="SDT" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>