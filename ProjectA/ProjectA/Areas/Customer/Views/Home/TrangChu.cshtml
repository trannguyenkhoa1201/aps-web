<!-- Mã JavaScript -->
<script>
    const scrollAmount = 200; // Số pixel để cuộn

    // Điện Thoại
    const productContainerPhone = document.getElementById('product-container-phone');
    document.getElementById('prevBtnPhone').onclick = () => productContainerPhone.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
    document.getElementById('nextBtnPhone').onclick = () => productContainerPhone.scrollBy({ left: scrollAmount, behavior: 'smooth' });

    // Tai Nghe
    const productContainerTaiNghe = document.getElementById('product-container-tai-nghe');
