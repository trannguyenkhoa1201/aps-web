@model ProjectA.Models.NhaCungCap

@{
    ViewData["Title"] = "Create NhaCungCap";
}

<h1>Create NhaCungCap</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TieuSu" class="control-label"></label>
                <textarea asp-for="TieuSu" class="form-control"></textarea>
                <span asp-validation-for="TieuSu" class="text-danger"></span>
            </div>
