@model ProjectA.Models.NhaCungCap

@{
    ViewData["Title"] = "Chỉnh Sửa Nhà Cung Cấp";
}

<div class="container mt-5">
    <h1 class="text-center">Chỉnh Sửa Thông Tin Nhà Cung Cấp</h1>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <!-- Tên Nhà Cung Cấp -->
        <div class="form-group mt-3">
            <label asp-for="Name" class="form-label">Tên Nhà Cung Cấp</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Tiểu Sử -->
        <div class="form-group mt-3">
            <label asp-for="TieuSu" class="form-label">Tiểu Sử</label>
            <textarea asp-for="TieuSu" class="form-control"></textarea>
            <span asp-validation-for="TieuSu" class="text-danger"></span>
        </div>

        <!-- Ngày Thành Lập -->
        <div class="form-group mt-3">
            <label asp-for="NgayThanhLap" class="form-label">Ngày Thành Lập</label>
            <input asp-for="NgayThanhLap" class="form-control" type="date" />
            <span asp-validation-for="NgayThanhLap" class="text-danger"></span>
        </div>

        <!-- URL Hình Ảnh -->
        <div class="form-group mt-3">
            <label asp-for="ImageUrl" class="form-label">URL Hình Ảnh</label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
            @* Hiển thị hình ảnh hiện tại nếu có *@
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="mt-3">
                    <label>Hình Ảnh Hiện Tại:</label>
                    <img src="@Model.ImageUrl" alt="Ảnh Nhà Cung Cấp" class="img-thumbnail" style="width: 150px; height: auto;" />
                </div>
            }
        </div>

        <!-- Nút Lưu Thay Đổi -->
        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Lưu Thay Đổi</button>
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
